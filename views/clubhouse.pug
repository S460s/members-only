include layouts/header

.container
  h1.h1.pt-3.pb-3 #{title}
  form(action="", method="POST").shadow.p-3.mb-5.bg-body.rounded
    .mb-3 
      label(for="title").form-label Password
      input#title.form-control(type="text" name="title" placeholder="Discord Update" required)

    .d-grid.col-6.mx-auto 
      button.btn.btn-primary(type="submit") Submit

  if errors
    -- console.log(errors)
    for error in errors 
      .alert.alert-danger #{error.msg}
